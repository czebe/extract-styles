{
  "name": "extract-styles",
  "version": "0.0.1",
  "description": "Extract-styles creates a theme package with lines from your SCSS files marked with // @theme",
  "main": "index.js",
  "scripts": {
    "pretest": "npm run build",
    "test": "nyc mocha --require babel-register --timeout 8000 './test/**/*.spec.js'",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "develop": "npm-watch",
    "build": "babel src -d dist",
    "lint": "eslint src test",
    "patch": "npm version patch && npm publish",
    "minor": "npm version minor && npm publish",
    "major": "npm version major && npm publish",
    "prepublish": "npm run lint && npm test && npm run build",
    "postpublish": "git push origin master --tags",
    "prepare": "npm run build"
  },
  "watch": {
    "build": "src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/czebe/extract-styles.git"
  },
  "keywords": [
    "sass",
    "scss",
    "theme",
    "extract",
    "ast",
    "parse"
  ],
  "author": {
    "name": "Marton Czebe",
    "email": "czebemarci@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/czebe/extract-styles/issues"
  },
  "homepage": "https://github.com/czebe/extract-styles#readme",
  "readme": "README.md",
  "dependencies": {
    "glob": "^7.1.2",
    "postcss": "^6.0.14",
    "postcss-scss": "^1.0.2"
  },
  "devDependencies": {
    "ajv": "^5.3.0",
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-es2015-spread": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chalk": "^2.3.0",
    "codecov": "^3.0.0",
    "eslint": "^4.10.0",
    "mocha": "^4.0.1",
    "npm-watch": "^0.3.0",
    "nyc": "^11.2.1"
  }
}
